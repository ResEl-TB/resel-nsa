#!/bin/sh

set -e

case "$1" in
  configure)
    chown nsa:nsa /etc/nsa.conf

    chown nsa:nsa /usr/bin/nsa

    chown nsa:nsa /usr/libexec/nsa
    chown nsa:nsa /usr/libexec/nsa/do
    chown nsa:nsa /usr/libexec/nsa/nsafs
    chown nsa:nsa /usr/libexec/nsa/modules

    chown nsa:nsa /var/lib/nsa
    chown nsa:nsa /var/lib/nsa/error
    chown nsa:nsa /var/lib/nsa/evicted

    chown nsa:nsa /var/spool/nsa

    sed -i 's/#\s*user_allow_other/user_allow_other/' /etc/fuse.conf
  ;;

  abort-upgrade|abort-remove|abort-deconfigure)
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
